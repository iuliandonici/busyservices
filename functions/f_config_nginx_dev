server {
      listen 80;
      listen [::]:80;

      server_name busydev.router.ho.me;
      root /var/www/busydev;
      index index.html;
      location / {
      }
      location /busyfin/ {
         proxy_pass http://busydev:8096;
         proxy_set_header Host $host;
         proxy_set_header X-Real-IP $remote_addr;
         proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
         proxy_set_header X-Forwarded-Proto $scheme;
      }
      location /busytrans/ {
         proxy_pass http://busydev:9091;
         proxy_set_header Host $host;
         proxy_set_header X-Real-IP $remote_addr;
         proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
         proxy_set_header X-Forwarded-Proto $scheme;
      }

}
